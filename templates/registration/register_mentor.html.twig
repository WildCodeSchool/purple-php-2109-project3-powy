{% extends 'base.html.twig' %}

{% block title %}Inscription mentor{% endblock %}

{% block body %}
    {% include "components/_header.html.twig" %}
    {% include "components/_flashmessages.html.twig" %}
    <h1>Formulaire d'inscription mentor</h1>

    {{ form_start(mentorRegistrationForm) }}
        {{ form_errors(mentorRegistrationForm) }}
        <p>Quel est ton poste actuel?</p>
        {{ form_row(mentorRegistrationForm.professionalSector, {
            label: 'Quel est ton domaine pro'
        }) }}
        {{ form_row(mentorRegistrationForm.company, {
            label: 'Quelle est ton entreprise actuelle?'
        }) }}
        {{ form_row(mentorRegistrationForm.jobTitle, {
            label: 'Quel est ton dernier poste occupé?'
        }) }}
        {{ form_row(mentorRegistrationForm.careerDescription, {
            label: 'Précisions sur ton poste, ton parcours:'
        }) }}
        <hr>
        <p>Sur quels points souhaites-tu fournir de l'aide?</p>
        <small>Sélectionne <strong>3 sujets</strong> dans l'ordre d'importance.</small>
        {{ form_row(mentorRegistrationForm.topic1, {
            label: 'choix 1'
        }) }}
        {{ form_row(mentorRegistrationForm.topic2, {
            label: 'choix 2'
        }) }}
        {{ form_row(mentorRegistrationForm.topic3, {
            label: 'choix 3'
        }) }}
        <hr>
        <p>Qui es-tu?</p>
        <small>Ces informations seront communiquées à tes futurs étudiants.</small>
        {{ form_row(mentorRegistrationForm.user.firstname, {
            label: 'Prénom'
        }) }}
        {{ form_row(mentorRegistrationForm.user.lastname, {
            label: 'Nom'
        }) }}
        {{ form_row(mentorRegistrationForm.user.gender, {
            label: 'Genre'
        }) }}
        {{ form_row(mentorRegistrationForm.user.age, {
            label: 'Âge'
        }) }}
        {{ form_row(mentorRegistrationForm.user.phone, {
            label: 'Téléphone'
        }) }}
        <hr>
        <p>Il te suffit d'entrer tes informations de connexion</p>
        {{ form_row(mentorRegistrationForm.user.email) }}
        {{ form_row(mentorRegistrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        <hr>
        <p>Termine ton inscription en validant les points suivants</p>
        {{ form_widget(mentorRegistrationForm.user.agreeTerms) }}
        {{ form_label(mentorRegistrationForm.user.agreeTerms, 'J\'accepte les CGU ainsi que le fait que mes données soient utilisées dans le cadre de la politique de confidentialité.') }}

        <button type="submit" class="btn">s'inscrire</button>
    {{ form_end(mentorRegistrationForm) }}
{% endblock %}