{% extends 'base.html.twig' %}

{% block title %}Inscription mentor{% endblock %}

{% block body %}
    {% include "components/_header.html.twig" %}
    {% include "components/_flashmessages.html.twig" %}
    <h1>Formulaire d'inscription mentor</h1>
        {{ form_start(mentorRegistrationForm) }}
        {{ form_errors(mentorRegistrationForm) }}
    {#progress-bar 1#}
        <div class="progress" style="height: 5px;">
        <div class="progress-bar" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    {#question 1 #}
        <p class="question-text">Quel est ton poste actuel?</p>
    {# form 1 #}
        {{ form_row(mentorRegistrationForm.professionalSector, {
            label: 'Quel est ton domaine pro'
        }) }}
        {{ form_row(mentorRegistrationForm.company, {
            label: 'Quelle est ton entreprise actuelle?'
        }) }}
        {{ form_row(mentorRegistrationForm.jobTitle, {
            label: 'Quel est ton dernier poste occupé?'
        }) }}
        {{ form_row(mentorRegistrationForm.careerDescription, {
            label: 'Précisions sur ton poste, ton parcours:'
        }) }}
    {# scroll-btn 1 #}
        <div class="scroll-btn-section">
            <button type="submit" class="scroll-btn">suivant</button>
        </div>
    {# logo 2#}
        <div class="logo-powy">
            <img src="{{ asset('build/images/logo-powy.png') }}" alt="logo">
        </div>
    {# progress-bar 2 #}
        <div class="progress" style="height: 5px;">
        <div class="progress-bar" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    {# question 2 #}
        <p class="question-text">Sur quels points souhaites-tu fournir de l'aide?</p>
    {# indication 2 #}
        <div class ="indications">
            <p>Sélectionne <strong>3 sujets</strong> dans l'ordre d'importance.</p>
        </div>
    {# form 2 #}
        {{ form_row(mentorRegistrationForm.topic.topic1, {
            label: 'choix 1'
        }) }}
        {{ form_row(mentorRegistrationForm.topic.topic2, {
            label: 'choix 2'
        }) }}
        {{ form_row(mentorRegistrationForm.topic.topic3, {
            label: 'choix 3'
        }) }}
    {# scroll-btn 2 #}
        <div class="scroll-btn-section">
            <button type="submit" class="scroll-btn">suivant</button>
        </div>
    {# logo 3 #}
        <div class="logo-powy">
            <img src="{{ asset('build/images/logo-powy.png') }}" alt="logo">
        </div>
    {# progress-bar 3 #}
        <div class="progress" style="height: 5px;">
        <div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    {# question 3 #}
        <p class="question-text">Qui es-tu?</p>
    {# indication 3 #}
        <div class ="indications">
            <p>Ces informations seront communiquées à tes futurs étudiants.</p>
        </div>
    {# form 3 #}
        {{ form_row(mentorRegistrationForm.user.firstname, {
            label: 'Prénom'
        }) }}
        {{ form_row(mentorRegistrationForm.user.lastname, {
            label: 'Nom'
        }) }}
        {{ form_row(mentorRegistrationForm.user.gender, {
            label: 'Genre'
        }) }}
        {{ form_row(mentorRegistrationForm.user.age, {
            label: 'Âge'
        }) }}
        {{ form_row(mentorRegistrationForm.user.phone, {
            label: 'Téléphone'
        }) }}
    {# scroll-btn 3 #}
        <div class="scroll-btn-section">
            <button type="submit" class="scroll-btn">suivant</button>
        </div>
    {# logo 4 #}
        <div class="logo-powy">
            <img src="{{ asset('build/images/logo-powy.png') }}" alt="logo">
        </div>
    {# progress-bar 4 #}
        <div class="progress" style="height: 5px;">
        <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    {# indication 4 #}
        <div class ="indications">
            <p>Il te suffit d'entrer tes informations de connexion</p>
        </div>
    {# form 4 #}
        {{ form_row(mentorRegistrationForm.user.email) }}
        {{ form_row(mentorRegistrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
    {# scroll-btn 4 #}
        <div class="scroll-btn-section">
            <button type="submit" class="scroll-btn">suivant</button>
        </div>
    {# logo 5 #}
        <div class="logo-powy">
            <img src="{{ asset('build/images/logo-powy.png') }}" alt="logo">
        </div>
    {# progress-bar 5 #}
        <div class="progress" style="height: 5px;">
        <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    {# indications 5 #}
        <div class ="indications">
            <p>Termine ton inscription en validant les points suivants</p>
        </div>
    {# form 5 #}
        {{ form_widget(mentorRegistrationForm.user.agreeTerms) }}
        {{ form_label(mentorRegistrationForm.user.agreeTerms, 'J\'accepte les CGU ainsi que le fait que mes données soient utilisées dans le cadre de la politique de confidentialité.') }}
    {# register-btn #}
        <div class="register-btn">
            <button type="submit" class="btn">s'inscrire</button>
        </div>
    {{ form_end(mentorRegistrationForm) }}
{% endblock %}