{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
    {% include "components/_header.html.twig" %}
    {% include "components/_flashmessages.html.twig" %}
        

            <h1 class="inscription-title">Formulaire d'inscription étudiant</h1>
            {{ form_start(registrationForm) }}
            {{ form_errors(registrationForm) }}
        {# progress-bar 1 #}
            <div class="progress" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 17%" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        {# question 1#}
            <p class="question-text">Quel est ton niveau actuel ?</p>
        {# indication 1#}    
            <div class="indications">
                <p>Sélectionne la case correspondant à ta situation.</p>
            </div>
        {# form 1#}
            {{ form_row(registrationForm.student.studyLevel, {
                label: 'Quel est ton niveau actuel ?'
            }) }}
        {# scroll-btn 1#}
            <div class="scroll-btn-section">
                <button type="submit" class="scroll-btn">suivant</button>
            </div>
        {# logo 2#}
        <div class="logo-powy">
            <img src="{{ asset('build/images/logo-powy.png') }}" alt="logo">
        </div>
        {# progress-bar 2 #}
            <div class="progress" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 34%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        {# question 2#}
            <p class="question-text">Sur quels points souhaites-tu t'améliorer ?</p>
        {# indication 2#}
            <div class="indications">
                <p>Sélectionne <strong>3 sujets</strong> dans l'ordre d'importance.</p>
            </div>
        {# form 2#}
                {{ form_row(registrationForm.student.topic1, {
                    label: 'choix 1'
                }) }}
                {{ form_row(registrationForm.student.topic2, {
                    label: 'choix 2'
                }) }}
                {{ form_row(registrationForm.student.topic3, {
                    label: 'choix 3'
                }) }}
        {# scroll-btn 2#}
            <div class="scroll-btn-section">
                <button type="submit" class="scroll-btn">suivant</button>
            </div>
        {# logo 3#}
            <div class="logo-powy">
                <img src="{{ asset('build/images/logo-powy.png') }}" alt="logo">
            </div>
        {# progress-bar 3 #}
            <div class="progress" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 51%" aria-valuenow="51" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        {# question 3#}
            <p class="question-text">On voudrait en savoir plus sur toi pour mieux t'accompagner.</p>
        {# form 3#}
            <div class="form-3">
                <div class="question-field">   
                    <p class="question-text"> Ton parcours scolaire : </p>
                </div>
                    <div class="field">
                        <div class="col-sm-10">
                        {{ form_row(registrationForm.student.school, {
                            label: 'Renseigne ton établissement scolaire :'
                        }) }}
                        </div>
                    </div>
                    <div class="question-field">
                        <p class="question-text"> Ton rêve professionnel : </p>
                    </div>
                    <div class="field">
                        <div class="col-sm-10">
                        {{ form_row(registrationForm.student.professionalSector, {
                            label: 'Secteur professionnel idéal'
                        }) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="col-sm-10">
                        {{ form_row(registrationForm.student.dreamJob, {
                            label: 'Ton rêve professionnel :'
                        }) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="col-sm-10">
                        {{ form_row(registrationForm.student.dreamDescription, {
                            label: 'Précise en quelques mots :'
                        }) }}
                        </div>
                    </div>
            </div>
        {# scroll-btn 3 #}
            <div class="scroll-btn-section">
                <button type="submit" class="scroll-btn">suivant</button>
            </div>
        {# logo 4#}
            <div class="logo-powy">
                <img src="{{ asset('build/images/logo-powy.png') }}" alt="logo">
            </div>
        {# progress-bar 4 #}
            <div class="progress" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 68%" aria-valuenow="68" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        {# question 4 #}
            <p class="question-text">Es-tu boursier ?</p>
        {# form 4#}
            {{ form_row(registrationForm.student.scholarship, {
                label: 'Es-tu boursier ?'
            }) }}
        {# scroll-btn 4#}
            <div class="scroll-btn-section">
                <button type="submit" class="scroll-btn">suivant</button>
            </div>
        {# logo 5#}
            <div class="logo-powy">
                <img src="{{ asset('build/images/logo-powy.png') }}" alt="logo">
            </div>
        {# progress-bar 5 #}
            <div class="progress" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 85%" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        {# question 5#}
            <p class="question-text">Qui es-tu ?</p>
        {# indication 5#}
            <div class="indications">
            <p>Ces informations seront communiquées à tes futurs mentors.</p>
            </div>
        {# form 5#}
            <div class="form-5">
                <div class="col-sm-10">
                        {{ form_row(registrationForm.gender, {
                            label: 'Genre'
                        }) }}
                </div>
                <div class="col-sm-10">
                        {{ form_row(registrationForm.lastname, {
                            label: 'Nom'
                        }) }}
                </div>
                <div class="col-sm-10">
                        {{ form_row(registrationForm.firstname, {
                            label: 'Prénom'      
                        }) }}
                </div>
                <div class="col-sm-10">
                        {{ form_row(registrationForm.age, {
                            label: 'Âge'
                        }) }}
                </div>
                <div class="col-sm-10">
                        {{ form_row(registrationForm.phone, {
                            label: 'Téléphone'
                        }) }}
                </div>
            </div>
        {# scroll-btn 5#}
            <div class="scroll-btn-section">
                <button type="submit" class="scroll-btn">suivant</button>
            </div>
        {# logo 6 #}
            <div class="logo-powy">
                <img src="{{ asset('build/images/logo-powy.png') }}" alt="logo">
            </div>
        {# progress-bar 6 #}
            <div class="progress" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        {# question 6 #}
            <p class="question-text">Dernière étape : il te suffit de rentrer tes informations de connexion et c'est fini !</p>
        {# form 6#}
            <div class="form-6">
                <div class="field-email-password">
                    <div class="col-sm-10">
                        <div class="field">
                            {{ form_row(registrationForm.email, {
                                label:'Email'
                            }) }}
                        </div>
                        <div class="field">    
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
                        </div>
                    </div>
                </div>
            </div>  
                <div class="CGU">  
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les CGU ainsi que le fait que mes données soient utilisées dans le cadre de la politique de confidentialité.') }}
                </div>
        {# register-btn #}    
            <div class="register-btn">
                <button type="submit" class="inscription-btn">s'inscrire</button>
            <div>
    {{ form_end(registrationForm) }}
{% endblock %}



