{% extends 'base.html.twig' %}

{% block title %}Powy - Le pouvoir de transmettre{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
{% include 'components/_header.html.twig' %}

<main>
    <div class="container">
        <h1 class="center">Mon profil</h1>
        <div class="img-profil center">
            <img src="{{ asset('build/images/user.png') }}" alt="img profil">
        </div>
        <h4 class="center">{{ app.user.firstname }} {{ app.user.lastname }}</h4>
        <h6 class="center">{{ app.user.age }} ans</h6>
    </div>
    <div class="card">
        <div class="card-body">
            <p class="title-card">Tes informations de contact</p>
            <div class="card-information">
                <img src="{{ asset('build/images/sendemail.png') }}" alt="email profil img">
                <p class="email-profil">{{ app.user.email }}</p>
            </div>
            <div class="card-information">
                <img src="{{ asset('build/images/phone.png') }}" alt="phone profil img">
                <p class="phone-profil">{{ app.user.phone }}</p>
            </div>
        </div>
    </div>
    <div class="container-btn">
        <div class="btn">
            <a href="#">Modifier mon profil</a>
        </div>
        <div class="btn">
            <a href="#">Modifier mes choix</a>
        </div>
        <div class="btn">
            <a href="#">Supprimer mon compte</a>
        </div>
    </div>
</main>

{% include 'components/_footer.html.twig' %}
{% endblock %}