{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}

{{ include('components/_header.html.twig') }}
<main class="container-profile">
    <h2>Modifier ou supprimer mon profil</h1>
    <div class="card-edit-profile">
        {{ form_start(form) }}
        <div class="profil-upload">
            <a href="" class="card-picture-profile">
                <img src="{{ asset('build/images/upload-icon.png') }}" alt="" width="35" height="27">
                {{ form_widget(form.picture) }}
            </a>
        </div>
        <div class="card-edit-profile-part1">
            <div class="field">
                <label for="gender" class="col-sm-2 col-form-label">Genre</label>
                <div class="col-sm-10">
                    {{ form_widget(form.gender) }}
                </div>
            </div>
            <div class="field">
                <label for="firstname" class="col-sm-2 col-form-label">Pr√©nom</label>
                <div class="col-sm-10">
                    {{ form_widget(form.firstname) }}
                </div>
            </div>
            <div class="field">
                <label for="lastname" class="col-sm-2 col-form-label">Nom</label>
                <div class="col-sm-10">
                    {{ form_widget(form.lastname) }}
                </div>
            </div>
        </div>
        <div class="card-edit-profile-part2">
            <div class="field">
                <label for="age" class="col-sm-2 col-form-label">Age</label>
                <div class="col-sm-10">
                    {{ form_widget(form.age) }}
                </div>
            </div>
            <div class="field">
                <label for="phone" class="col-sm-2 col-form-label">Phone</label>
                <div class="col-sm-10">
                    {{ form_widget(form.phone) }}
                </div>
            </div>
            <div class="field">
                <label for="email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    {{ form_widget(form.email) }}
                </div>
            </div>
        </div>
        <div class="field">
            <button type="submit" class="dark-submit-button">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="card-edit-password">
        {{ form_start(formpassword) }}
        <div class="password-fields-profile">
            <div class="field">
                <div class="col-sm-10">
                    {{ form_row(formpassword.plainPassword.first) }}
                </div>
            </div>
            <div class="field">
                <div class="col-sm-10">
                    {{ form_row(formpassword.plainPassword.second) }}
                </div>
            </div>
        </div>
        <div>
            <button type="submit" class="dark-submit-button">Modifier</button>
        </div>
        {{ form_end(form) }}
    </div>

    <button type="submit" class="alert-submit-button">Supprimer mon compte</button>

</main>
{% endblock %}
