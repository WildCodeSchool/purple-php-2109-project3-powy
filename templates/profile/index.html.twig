{% extends 'base.html.twig' %}

{% block title %}Powy - Le pouvoir de transmettre{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
{% include 'components/_header.html.twig' %}
{% include "components/_flashmessages.html.twig" %}
<main>
    <div class="container">
        <h2 class="center">Mon profil</h2>
        <div class="img-profile center">
            {% if app.user.picture == null %}
                <img src="/upload/pictures/user.png" alt="img profile">
            {% else %}
                <img src="/upload/pictures/{{ app.user.picture }}" alt="img profile">
            {% endif %}
        </div>
        <h5 class="center">{{ app.user.firstname }} {{ app.user.lastname }}</h5>
        <h6 class="center">{{ app.user.age }} ans</h6>
    </div>
    <div class="card-profile">
        <div class="card-body-profile">
            <p class="title-card-profile">Tes informations de contact</p>
            <div class="card-information-profile">
                <img src="{{ asset('build/images/sendemail.png') }}" alt="email profile img">
                <p class="email-profile">{{ app.user.email }}</p>
            </div>
            <div class="card-information-profile">
                <img src="{{ asset('build/images/phone.png') }}" alt="phone profile img">
                <p class="phone-profile">{{ app.user.phone }}</p>
            </div>
        </div>
    </div>
    {# if the user is a student #}
    <div class='d-flex flex-column align-items-center'>
        {% if app.user.student is defined and app.user.student is not null %}
            {% if app.user.student.mentoring is defined and app.user.student.mentoring is null %}
                <p class="center red">Tu n'as pas encore de mentor.</p>
            {% elseif app.user.student.mentoring is defined and app.user.student.mentoring is not null %}
                <h2>Ton mentor</h2>
                {% if app.user.picture is not null %}
                    <img src="/upload/pictures/{{ app.user.student.mentoring.mentor.user.picture }}" alt="img profile">
                {% endif %}
                <a href="{{ path("chat") }}" class="btn btn-secondary">Chat avec ton mentor {{ app.user.student.mentoring.mentor.user.firstname }} !</a>
            {% endif %}
        {# if the user is a mentor #}
        {% elseif app.user.mentor is defined and app.user.mentor is not null %}
            {% if app.user.mentor.mentoring is defined and app.user.mentor.mentoring is null %}
                <p class="center red">Tu n'as pas encore d'étudiant à mentorer.</p>
            {% else %}
                <h2>Votre étudiant :</h2>
                {% if app.user.picture is not null %}
                    <img src="/upload/pictures/{{ app.user.mentor.mentoring.student.user.picture }}" alt="img profile">
                {% endif %}
                <p>{{ app.user.mentor.mentoring.student.user.firstname }} <span class="fw-bold">{{ app.user.mentor.mentoring.student.user.lastname }}</span></p>
                <a href="{{ path("chat") }}" class="btn btn-secondary">Discutez avec votre étudiant.</a>
            {% endif %}
        {% endif %}
    </div>
    <div class="container-btn-profile">
        <div class="btn-profile">
            <a href="{{ path('profile_edit') }}">Modifier mon profil</a>
        </div>
        <div class="btn-profile">
            <a href="#">Modifier mes choix</a>
        </div>
        <div class="btn-profile">
            {% include 'profile/_delete_form.html.twig' %}
        </div>
    </div>
</main>
{% endblock %}